<!--<div class="cart_title">Your Cart</div>-->
<div class="cart_title" ><%= t('.title') %></div>

<table>
  <%= render(@cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>

  </tr>
</table>
<!--It is used for empty button-->
<!--If current age is checkout page  then no need to show the checkout button. orders/new is the checkout page-->
<% unless current_page?(new_order_path) %>
    <%#= button_to "Checkout", new_order_path, :method => :get %>
    <%= button_to t('.checkout'), new_order_path, :method => :get %>
<% end %>
<%#= button_to 'Empty cart', cart, :method => :delete,
              :data => {:confirm => 'Are you sure?'} %>
<%= button_to t('.empty'), cart, :method => :delete,
              :data => {:confirm => 'Are you sure?'} %>
